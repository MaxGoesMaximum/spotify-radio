generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String   @id @default(cuid())
  spotifyId String   @unique
  name      String
  email     String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions         Session[]
  listeningHistory ListeningHistory[]
  favorites        Favorite[]
  preferences      UserPreferences?
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  accessToken  String
  refreshToken String
  expiresAt    Int // Unix timestamp
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model ListeningHistory {
  id         String   @id @default(cuid())
  userId     String
  trackId    String
  trackName  String
  artistName String
  albumName  String
  albumImage String?
  genre      String
  durationMs Int      @default(0)
  playedAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, playedAt])
  @@index([userId, genre])
}

model Favorite {
  id         String   @id @default(cuid())
  userId     String
  trackId    String
  trackName  String
  artistName String
  albumName  String
  albumImage String?
  savedAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, trackId])
  @@index([userId])
}

model UserPreferences {
  id                   String  @id @default(cuid())
  userId               String  @unique
  theme                String  @default("dark")
  volume               Float   @default(0.7)
  lastStation          String  @default("pop")
  djVoice              String  @default("nl-NL-FennaNeural")
  notificationsEnabled Boolean @default(false)
  
  // Advanced Settings
  djFrequency          String  @default("normal") // low, normal, high
  crossfade            Boolean @default(true)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
